# =============================================================================
# API Configuration - Copy this file to .env and update the values
# =============================================================================

# Primary API Base URL (used if set)
# Update this based on your development setup:
# - Physical devices: http://YOUR_COMPUTER_IP:4000
# - Web development: http://localhost:4000
# - Android emulator: http://10.0.2.2:4000
EXPO_PUBLIC_API_BASE_URL=http://192.168.0.138:4000

# =============================================================================
# Platform-specific fallback URLs
# =============================================================================

EXPO_PUBLIC_API_BASE_URL_LOCALHOST=http://localhost:4000
EXPO_PUBLIC_API_BASE_URL_ANDROID_EMULATOR=http://10.0.2.2:4000
EXPO_PUBLIC_API_BASE_URL_IOS_DEVICE=http://192.168.0.138:4000

# =============================================================================
# API Settings
# =============================================================================

EXPO_PUBLIC_API_TIMEOUT=10000

# =============================================================================
# App Configuration
# =============================================================================

EXPO_PUBLIC_APP_NAME=MessMate
EXPO_PUBLIC_APP_VERSION=1.0.0

# =============================================================================
# Quick Setup Guide:
# =============================================================================
# 1. Copy this file: cp .env.example .env
# 2. Find your IP: hostname -I | awk '{print $1}'
# 3. Update EXPO_PUBLIC_API_BASE_URL with your IP
# 4. Restart Expo: npm start
